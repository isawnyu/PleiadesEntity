<?xml version="1.0" encoding="utf-8"?>
<kml
  xmlns="http://earth.google.com/kml/2.1"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  tal:define="furl context/absolute_url;
              dummy python:here.REQUEST.RESPONSE.setHeader('Content-type', 'application/vnd.google-earth.kml+xml')"
  >
  <NetworkLink>
    <name tal:content="context/Title">TITLE</name>
    <description tal:content="structure context/Description"/>
      <Link>
        <href tal:content="string:${furl}.kml">URL</href>
        <viewRefreshMode>onRequest</viewRefreshMode>
      </Link>
  </NetworkLink>
</kml>

