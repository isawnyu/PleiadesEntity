<?xml version="1.0" encoding="UTF-8"?>
<kml
  xmlns="http://earth.google.com/kml/2.1"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  tal:define="infos context/@@geo/forKML;
              furl context/absolute_url;
              dummy python:here.REQUEST.RESPONSE.setHeader('Content-type', 'application/vnd.google-earth.kml+xml')"
  >
  <Document>
    <name>Pleiades: Ancient Places</name>
    <Folder>
      <Placemark tal:repeat="info infos">
        <description metal:use-macro="here/kml_macros/macros/description">DESCRIPTION</description>
        <name tal:content="info/title">TITLE</name>
        <span tal:replace="structure info/geom_element"/>
      </Placemark>
    </Folder>
  </Document>
</kml>

