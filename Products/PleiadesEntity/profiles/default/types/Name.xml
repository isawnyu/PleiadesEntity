<?xml version="1.0"?>
<object name="Name"
        meta_type="Factory-based Type Information with dynamic views"
        xmlns:i18n="http://xml.zope.org/namespaces/i18n"
        i18n:domain="plone">
   
 <property name="title" i18n:translate="">Name</property>
 <property name="description" i18n:translate="">A Name object describes an appellation of a Place along with the sources that attest to its use in time. Its primary attributes include romanized forms, association certainty, time periods, and references. Pleiades also seeks to collect transcriptions of ancient forms of these names so that places can be connected to ancient documents and inscriptions.</property>
 <property name="content_icon">document_icon.png</property>
 <property name="content_meta_type">Name</property>
 <property name="product">PleiadesEntity</property>
 <property name="factory">addName</property>
 <property name="immediate_view">base_view</property>
 <property name="global_allow">False</property>
 <property name="filter_content_types">False</property>
 <property name="allowed_content_types">
 </property>
 <property name="allow_discussion">True</property>
 <property name="default_view">base_view</property>
 <property name="view_methods">
  <element value="base_view"/>
 </property>
 <property name="default_view_fallback">False</property>
 <alias from="(Default)" to="(dynamic view)"/>
 <alias from="index.html" to="(dynamic view)"/>
 <alias from="view" to="(selected layout)"/>
 <alias from="edit" to="base_edit"/>
 <action title="Edit" 
         action_id="edit"
         category="object" 
         condition_expr="not:object/@@plone_lock_info/is_locked_for_current_user"
         url_expr="string:${object_url}/edit" 
         visible="True">
  <permission value="Modify portal content"/>
 </action>
 <action title="view" 
         i18n:attributes="title"
         action_id="view"
         category="object" 
         condition_expr="python:1"
         url_expr="string:${object_url}/base_view" 
         visible="True">
  <permission value="View"/>
 </action>
</object>
